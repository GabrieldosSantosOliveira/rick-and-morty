{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/assets/*": ["src/assets/*"],
      "@/constants/*": ["src/constants/*"],
      "@/data/*": ["src/data/*"],
      "@/domain/*": ["src/domain/*"],
      "@/infra/*": ["src/infra/*"],
      "@/main/*": ["src/main/*"],
      "@/shared/*": ["src/shared/*"],
      "@/ui/*": ["src/ui/*"]
    }
  }
}
